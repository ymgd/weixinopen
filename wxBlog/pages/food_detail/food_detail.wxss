/**index.wxss**/
text{
  font-family: "微软雅黑";
}
.scrollBox{
  width: 750rpx;
  height: auto;
  margin-bottom: 180rpx;
}
.photoBox{
    height: 450rpx;
    width: 100%;
    position: relative;
    overflow: hidden;
}
.photo{
    width: 560rpx;
    height:420rpx;
    position: absolute;
    bottom:-40rpx;
    left:-50rpx;
}
.nameBox{
    position: absolute;
    width: auto;
    height: auto;
    right: 5%;
    top: 45%;
    transform: translateY(-35%);
    max-width: 270rpx;
}
.name{
    display: block;
    margin-bottom: 15rpx;
    width: 100%;
    font-size: 40rpx;
    float: left;
}
.Ename{
    display: block;
    width: 100%;
    font-size: 25rpx;
    font-family: "Comic Sans MS","幼圆","黑体",sans-serif;
}
/*photo end*/

.materialBox{
    height: 550rpx;
    width: 100%;
    background: url(http://seventh77.com/view/food/img/food_bg.jpg?v=1) no-repeat center center;
    background-size: 100%;
}
.m_shadow{
    height: 100%;
    width: 100%;
    position: relative;
    background: rgba(60,20,55,0.9);
}
.m_title{
    font-size: 35rpx;
    color: rgb(250,250,250);
    padding: 15px;
}
.s_box{
  width: 100%;
  height: auto;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  padding: 0 20rpx;
  box-sizing:border-box;
  margin-bottom: 20rpx;
}
.m_s{
  font-size: 30rpx;
  font-weight: bold;
  color: rgb(193,153,209);
}
.seasoningBox{
  width: 710rpx;
  height: auto;
}
.s_block{
  display: inline-block;
  background: rgb(193,153,209);
  padding: 5rpx 15rpx;
  margin: 5rpx 7rpx 5rpx 0;
  border-radius: 5rpx;
}
.s_name{
  color:rgb(60,20,55);
  font-size: 25rpx;
  padding-right: 5rpx;
  font-weight: bold;
}
.s_num{
  color:#fff;
  font-size: 25rpx;
}
/*seasoning end*/
.stepBox{
    width: 100%;
    height: 500rpx;
}
.stepNum{
    width: 200rpx;
    height: 100%;
    background-color: rgb(193,153,209);
}
.stepCont{
    width: 550rpx;
    height: 100%;
}
.fl{
  float: left;
}
.fr{
  float: right;
}
.stepImg{
  width: 200rpx;
  height: 296rpx;
  margin-top: 100rpx;
}
.photoFrame{
    position: relative;
    top: 50%;
    height: 230rpx;
    width: 270rpx;
    margin-top: -125rpx;
    background: url(http://seventh77.com/view/food/img/frame.png) no-repeat;
    background-size: 100% 100%;
}
.stepPhoto{
    position: absolute;
    left: 50%;
    margin-left: -102rpx;
    top: 57rpx;
    height: 140rpx;
    width: 210rpx;
}
.stepWordBox{
    height: auto;
    width: 245rpx;
    margin: 0 15rpx;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
}
.stepWord{
  display: inline-block;
  width: 100%;
  font-size: 25rpx;
  padding-bottom: 15rpx;
  line-height: 1.3;
}
.stepTips{
  display: inline-block;
  width: 100%;
  font-size: 20rpx;
  color:rgb(193,153,209);
  line-height: 1.3;
}
/*step end*/