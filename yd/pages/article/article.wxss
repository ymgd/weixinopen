.container{
  background-color: #fff;
}
/* 文章公共头部 */
.header{
  width: 100%;
}

.banner-list{
  height: 432rpx;
}

.banner-list swiper-item{
  width: 100%;
  height: 100%;
}

.banner{
  width: 100%;
  height: 100%;
}


.title-container{
  color: #252629;
  font-weight: normal;
  line-height: 60rpx;
  font-size: 40rpx;
  text-align: left;
  margin: 14rpx 24rpx 0;
}

.price-and-author-container{
  padding:10rpx 24rpx 0;
  font-size: 28rpx;
  line-height: 1;

  display: -webkit-flex;
  align-items: -webkit-center;

  display: flex;
  align-items: center;

  border-bottom: 1px solid #bababa;
  padding-bottom: 16rpx;
  /* 高度变大的问题，只要限制最大高度即可解决 */
  max-height: 68rpx;
}

.price{
  color: #e60012;
}

.datetime{
  color:#d0d0d0;
}

.author{
  display: block;

  -webkit-flex: 1;
  flex: 1;

  display: -webkit-flex;
  justify-content: -webkit-flex-end;
  -webkit-align-items: center;

  display: flex;
  justify-content: flex-end;
  align-items: center;

}

.author image{
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.author text{
  display: flex;
  height: 100%;
  -webkit-align-items: center;
  align-items: center;
  margin-left: 20rpx;
  color:#616368;
}

/* 文章内容区 */
.content{
  padding:0 24rpx 40rpx 24rpx;
  line-height: 1.625;
  font-size: 32rpx;
  text-align: left;
  word-wrap: break-word;
  word-break: break-word;
  color:#616368;

}

.p,
.ul,
.ol,
.li,
.img,
.editorhead,
.editorcontent,
.h2,
.h3,
.tips,
.address
.lift{
  display: block;
}

.p{
  margin-top: 38rpx;
}

.img{
  width: 100%;
  margin-top: 38rpx;
}

.h2,
.h3{
  color: #252629;
  padding-left: 12rpx;
}

.h2{
  margin: 62rpx 0 38rpx;
  border-left: 24rpx solid #e60012;
  line-height: 1;
  font-weight: bold;
}

.h3{
    border-left: 6rpx solid #e60012;
    margin: 38rpx 0;
    font-weight: normal;
}

.lift{
  color: #8e8e93;
  font-size: 12rpx;
  line-height: 1;
  margin-top: 4rpx;
}

.address{
  position: relative;
  color: #8e8e93;
  font-size: 12rpx;
  line-height: 1;
  top:-48rpx;
  left: 34rpx;
}

.ul,.ol{
  color: #616368;
  margin: 38rpx 24rpx;
}

.ul .li,.ol .li{
  font-size: 32rpx;
  word-wrap: break-word;
  position: relative;
}

.ul .li:before{
    position: absolute;
    top: 30rpx;
    left: -22rpx;
    width: 12rpx;
    height: 12rpx;
    font-size: 12rpx;
    line-height: 12rpx;
    border-radius: 50%;
    background-color: #e60012;
    content: '';
}
.ol {
  counter-reset: section;
}

.ol .li{
  counter-increment: section;
}

.ol .li:before{
    position: absolute;
    top: 10rpx;
    left: -32rpx;
    font-size: 32rpx;
    line-height: 1;
    content: '';
    content: counter(section) '. ';
}

