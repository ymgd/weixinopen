.tips{
  line-height: 1.69;
  font-size: 26rpx;
  text-align: left;
  background-color: #f4f4f4;
  position: relative;
  padding: 14rpx 48rpx 14rpx 24rpx;
  margin: 38rpx 0;
  box-shadow: 1px 1px 0px 0px rgba(0,0,0,0.15);
}

.tips:before{
  content: '';
  position: absolute;
  width: 100rpx;
  height: 60rpx;
  background-color: #fff;
  transform: rotate(45deg);
  right: -40rpx;
  top: -20rpx;
}

.editorhead,
.editorcontent{
  margin: 38rpx 0;
  text-align: left;
  word-wrap: break-word;
}

.editorhead{
  margin: 14rpx 0;
  color: red;
}

.editorcontent{
  margin: 14rpx 0;
  line-height: 1.909;
  font-size: 22rpx ;
}


/* sku */
.sku{
  background-color: #efeff4;
  line-height: 1.71;
  font-size: 28rpx;
  color: #535353;
  padding: 24rpx;
  margin: 24rpx 0;
  display: flex;
}

.sku-info{
  flex: 1;
  margin: -9rpx 0 0 24rpx;
  display: flex;
  flex-direction: column;
}
.sku-title{
  flex: 1;
}

.sku-footer{
  display: flex;
  font-size: 24rpx;
  line-height: 1;
  align-items: flex-end;
}
.sku-footer text{
  flex: 1;
}
.sku-footer navigator{
  align-self: flex-end;
  color: #fff;
  background-color: #e60012;
  text-align: center;
  line-height: 40rpx;
  width: 132rpx;
  padding: 4rpx 0;
  opacity: 0.5;
  border-radius: 6rpx;
}
