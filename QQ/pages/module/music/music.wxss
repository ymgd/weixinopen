.music-type-title{
  font-size: 24rpx;
  color: #1f1f1f;
}

.music-section{
   width: 25%;
   float:left;
   padding: 26rpx 0;
}

.music-section__ctn {
  margin: 0 auto;
  text-align: center;
}
.music-section__title{
  text-align: center;
  font-size: 20rpx;
  margin-top: 10rpx;
  color: #1f1f1f;
}
.music-section__ctn image{
   width: 40rpx; height: 40rpx;
}

.music-main{
  position:absolute;
  width:100%;
  height: 70%;
  background-color: black;
  color:white;
  margin:0 auto;
  text-align:center;
  justify-content:center;
  align-items:center;
  display:-webkit-flex;
}
.singer-pic{
  background: url('../../res/img/logo_music.png') no-repeat;
  background-size:100%;
  border-radius:50%;
  border: 1px solid  #fff;
  transform:rotate(0deg);
  -ms-transform:rotate(0deg); 	/* IE 9 */
  -moz-transform:rotate(0deg); 	/* Firefox */
  -webkit-transform:rotate(0deg); /* Safari å’Œ Chrome */
  -o-transform:rotate(0deg);
}
.music-bottom{
    position: absolute;
    bottom:0rpx;
    width:100%;
    min-height: 30%;
    background:white;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}